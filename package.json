  },
  "homepage": "https://github.com/passcod/what#readme",
  "dependencies": {
    "@iarna/toml": "^2.2.3",
    "globby": "^9.2.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "nodemon": "^1.18.11",
    "npm-run-all": "^4.1.5"
  }
